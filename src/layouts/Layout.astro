---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
	title: string;
	type: string;
}

const { title } = Astro.props;
const { type } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<meta property="og:title" content={title}>
		<meta property="og:site_name" content="kanae.dev">
		<meta property="og:type" content={type}>
		<meta property="og:url" content={Astro.url}>
		<meta property="og:image" content="https://kanae.dev/favicon.png">
		<meta property="og:description" content="I am writing about my daily life.">
		<title>{title}</title>
		<script src="https://kit.fontawesome.com/86ced1b7f3.js" crossorigin="anonymous"></script>
		<!-- Google tag (gtag.js) -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=G-FWCYZJQN2G"></script>
		<script>
		window.dataLayer = window.dataLayer || [];
		function gtag(){dataLayer.push(arguments);}
		gtag('js', new Date());

		gtag('config', 'G-FWCYZJQN2G');
		</script>
	</head>
	<body>
		<div class="container  mx-auto p-2 lg:max-w-3xl">
			<Header />
			<main>
				<slot />
			</main>
			<Footer />
		</div>
	</body>
</html>
<style is:global>
	@tailwind base;
	@tailwind components;
	@tailwind utilities;

	body {
		letter-spacing: .08em;
		color: #34495e;
		line-height: 1.5;
		font-family: "游ゴシック", YuGothic, "ヒラギノ角ゴ Pro",
    "Hiragino Kaku Gothic Pro", "メイリオ", Meiryo, sans-serif;
	}
	code {
		font-family: "Source Code Pro", Monaco, Inconsolata, monospace;
		@apply text-sm;
	}
</style>
