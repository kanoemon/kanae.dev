---
const {post} = Astro.props;
---


<article class="py-3">
    <time class="text-xs text-gray-500">
        {new Date(post.frontmatter.pubDate).toLocaleDateString()}
    </time>
    <h1 class="font-semibold">
        <a href={post.url}>
            {post.frontmatter.title}
        </a>
    </h1>
</article>
