---
const {post} = Astro.props;
---

<article class="flex justify-between py-1.5">
    <h1>
        <a href={post.url} class="border-0 font-normal">
            {post.frontmatter.title}
        </a>
    </h1>
    <time>
        {new Date(post.frontmatter.pubDate).toLocaleDateString()}
    </time>
</article>
