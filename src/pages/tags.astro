---
import Layout from '../layouts/Layout.astro';

const allPosts = await Astro.glob('../pages/posts/*.md');
allPosts.sort((a, b) => Date.parse(b.frontmatter.date) - Date.parse(a.frontmatter.date));

const tags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];
---

<Layout title="kanae.dev - Tags">
    <div class="text-center">
        <h1 class="text-lg text-cyan-600 underline underline-offset-8 my-4">{tags.length} Tags</h1>
        {tags.map((tag) => (
            <span class="text-xs inline-block mx-1 my-3">
                <a href={`/tags/${tag}`} class="py-1 px-3 rounded-full bg-gray-100">{tag}</a>
            </span>
        ))}
    </div>
</Layout>
