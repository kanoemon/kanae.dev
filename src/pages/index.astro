---
import Layout from '../layouts/Layout.astro';

const allPosts = await Astro.glob('../pages/posts/*.md');
allPosts.sort((a, b) => Date.parse(b.frontmatter.date) - Date.parse(a.frontmatter.date));
---

<Layout title="kanae.dev">
    <main class="container mx-auto max-w-3xl">
        {allPosts.map((post) => 
			<article class="py-6">
				<h1 class="my-1 text-2xl">
					<a href={post.url}>
						{post.frontmatter.title}
					</a>
				</h1>
				<div class="flex">
                    <time class="text-sm text-gray-400">{post.frontmatter.date}</time>
					<div class="text-sm text-gray-400">
                        {post.frontmatter.tags.map((tag: any) => (
                            <span class="before:content-['ãƒ»']"><a href={`/tags/${tag}`}>{tag}</a></span>
                        ))}
					</div>
				</div>
			</article>
        )}
	</main>
</Layout>

